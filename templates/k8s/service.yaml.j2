apiVersion: v1
kind: Service
metadata:
  name: {{ app_name }}-service
  namespace: {{ namespace }}
  labels:
    app: {{ app_name }}
    environment: {{ environment }}
spec:
  type: {{ service_type }}
  ports:
  - port: {{ service_port }}
    targetPort: 3000
    protocol: TCP
    name: http
  selector:
    app: {{ app_name }}
    environment: {{ environment }}
  sessionAffinity: None
